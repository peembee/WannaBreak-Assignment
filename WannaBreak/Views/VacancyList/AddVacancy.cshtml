@model WannaBreak.Models.VacancyList

@{
    ViewData["Title"] = "AddVacancy";
}

<h1>AddVacancy</h1>

<h4>VacancyList</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVacancyListToDB">            
            <div class="form-group">
                <label for="fkEmployeeId" class="control-label"></label>
               <input type="text" name="fkEmployeeId" class="form-control" id="fkEmployeeId" placeholder="Your Employee ID" required>
            </div>

             <div class="form-group">
                <label for="fkVacancyType" class="control-label AddEmployeeRole">Type of Break</label>
               <select name="fkVacancyType" class="status" id="fkVacancyType" required>
                 <option>CareOfChild</option>
                    <option>Sick</option>
                    <option>Duty</option>
                    <option>Study</option>    
                    <option>Paus</option>    
               </select>
               </div>

            <div class="form-group">
                <label for="start" class="control-label">Start Date</label>
               <input type="date" name="start" class="form-control" id="start" placeholder="Start" required>
            </div>

             <div class="form-group">
                <label for="stop" class="control-label">Stop Date</label>
               <input type="date" name="stop" class="form-control" id="stop" placeholder="Stop" required>
            </div>           
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


